<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".mainactivities.Dashboard">

    <ImageView
        android:id="@+id/dashboard_iv_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/bilibeads_logo" />

    <EditText
        android:id="@+id/dashboard_et_search"
        android:layout_width="215dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/dashboard_iv_logo"
        android:layout_toRightOf="@id/dashboard_iv_logo"
        android:background="@drawable/edittextshape"
        android:hint="@string/search_hint"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dashboard_iv_shoppingcart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/dashboard_et_search"
        android:src="@drawable/shoppingcarticon" />

    <ImageView
        android:id="@+id/dashboard_iv_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@id/dashboard_iv_shoppingcart"
        android:src="@drawable/profileicon" />

    <Button
        android:id="@+id/bt_dashboard_customize"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dashboard_iv_logo"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        style="@style/Buttons"
        android:text="@string/button_hint"
        android:background="@drawable/buttonshape" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboard_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_dashboard_customize"
        android:layout_marginTop="15dp" />
</RelativeLayout>