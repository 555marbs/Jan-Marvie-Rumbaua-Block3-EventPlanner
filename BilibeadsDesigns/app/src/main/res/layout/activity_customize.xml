<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customize.Customize"
    android:gravity="center"
    android:id="@+id/customize_image"
    android:orientation="vertical">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:text="Customize"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:background="@drawable/blue_background"
        android:textColor="@color/black">

    </TextView>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/back_button"
        android:paddingEnd="360dp">

    </ImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <ImageView
            android:id="@+id/thread_of_beads"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/thread">

        </ImageView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:columnCount="15"
            android:rowCount="1"
            android:layout_marginTop="170dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage5" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage6" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage7" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage8" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage9" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage10" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage11" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage12" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage13" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage14" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/blue_background"
                android:id="@+id/viewImage15" />


        </GridLayout>



        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/card_view_color"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:cardCornerRadius="10dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_productList"
                android:layout_width="380dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clear_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/card_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_view_color"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Clear">


        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/card_view"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/clear_button"
            android:background="@drawable/card_view_color"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Reset">


        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/reset_button"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/card_view_color"
            android:gravity="center"
            android:text="confirm">

        </androidx.appcompat.widget.AppCompatButton>


    </RelativeLayout>


</RelativeLayout>